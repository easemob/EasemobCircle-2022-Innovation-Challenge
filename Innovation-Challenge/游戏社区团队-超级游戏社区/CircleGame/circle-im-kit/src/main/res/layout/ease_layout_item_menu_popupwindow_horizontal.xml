<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center|start"
    android:padding="18dp">

    <ImageView
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/iv_action_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/shape_gray_2e2e2e_radius12"
        android:visibility="visible"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ease_menu_copy" />

    <TextView
        android:id="@+id/tv_action_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/iv_action_icon"
        app:layout_constraintTop_toBottomOf="@id/iv_action_icon"
        tools:text="copy" />

</androidx.constraintlayout.widget.ConstraintLayout>