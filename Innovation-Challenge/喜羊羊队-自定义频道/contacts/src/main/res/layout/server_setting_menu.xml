<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="104dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_radius4">

    <TextView
        android:id="@+id/tv_delete_server"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginRight="6dp"
        android:drawableLeft="@drawable/circle_destory"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:text="@string/circlr_delete_server"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_gray_e3e3e3"
        app:layout_constraintBottom_toTopOf="@id/tv_exit_server"
        app:layout_constraintTop_toBottomOf="@id/tv_delete_server" />

    <TextView
        android:id="@+id/tv_exit_server"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginRight="6dp"
        android:drawableLeft="@drawable/circle_door"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:text="@string/circlr_exit_server"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line" />


</androidx.constraintlayout.widget.ConstraintLayout>