<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_radius4">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="164dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_add_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/dialog_add_nickname"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edt_nickname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@color/color_gray_e6e6e6"
            android:gravity="center_vertical"
            android:hint="@string/dialog_add_nickname_here"
            android:maxLength="16"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:textColorHint="@color/circle_gray_929497"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tv_add_nickname" />

        <TextView
            android:id="@+id/tv_tag_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="11dp"
            android:text="0/16"
            android:textColor="@color/circle_black_60"
            app:layout_constraintBottom_toBottomOf="@id/edt_nickname"
            app:layout_constraintRight_toRightOf="@id/edt_nickname"
            app:layout_constraintTop_toTopOf="@id/edt_nickname" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="58dp"
            android:text="@string/circle_cancel"
            android:textColor="@color/circle_blue_037bfd"
            android:textSize="14sp"
            app:layout_constraintRight_toLeftOf="@id/tv_confirm"
            app:layout_constraintTop_toTopOf="@id/tv_confirm" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:text="@string/circle_confirm"
            android:textColor="@color/circle_blue_037bfd"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>